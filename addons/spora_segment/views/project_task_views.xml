<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit project task form view to add segment_id -->
    <record id="project_task_form_inherit_segment" model="ir.ui.view">
        <field name="name">project.task.form.inherit.segment</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="segment_id"
                       string="Budget Segment"
                       invisible="not project_id or not project_id.sale_order_id"
                       domain="[('order_id', '=', project_id.sale_order_id)]"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit project task search view to add root_tasks_only filter -->
    <record id="project_task_search_inherit_root_filter" model="ir.ui.view">
        <field name="name">project.task.search.inherit.root.filter</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_tasks']" position="after">
                <filter string="Root Tasks Only"
                        name="root_tasks_only"
                        domain="[('parent_id', '=', False)]"
                        help="Show only parent-level tasks (hide subtasks)"/>
            </xpath>
        </field>
    </record>

</odoo>
